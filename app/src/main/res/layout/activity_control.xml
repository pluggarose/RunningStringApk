<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="DuplicateIds">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:layout_editor_absoluteX="0dp"
      tools:layout_editor_absoluteY="193dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textAlignment="textEnd">

      <Spinner
          android:id="@+id/witch_device"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="318dp"
          android:layout_height="25dp"
          android:text="Текст сообщения" />

      <EditText
          android:id="@+id/editTextTextMultiLine"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:editable="true"
          android:ems="10"
          android:gravity="start|top"
          android:inputType="textMultiLine" />

      <Spinner
          android:id="@+id/rStringName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:spinnerMode="dialog" />

      <TextView
          android:id="@+id/Txt1"
          android:layout_width="145dp"
          android:layout_height="24dp"
          android:layout_marginTop="32dp"
          android:text="Выбор скорости"
          android:visibility="visible" />

      <SeekBar
          android:id="@+id/seekBar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:max="100"
          android:progress="1" />

      <TextView
          android:id="@+id/speedString"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:text="1"
          android:textAlignment="textEnd" />

      <TextView
          android:id="@+id/textView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:text="Выбор типа цвета" />

      <Spinner
          android:id="@+id/typeCol"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/textView3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Временный текст" />

      <Button
          android:id="@+id/ColorChangee"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Вбор цвета" />

      <Button
          android:id="@+id/button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Отправить" />

    </LinearLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>